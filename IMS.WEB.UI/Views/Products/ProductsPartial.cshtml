    var TabsLoaderText = "";
    var FilterRecord = function () {
        window.location.href = "/Report/NewReport?ReportFor=Vehicle&SelectAllIds=filtered";
    }
    var AllRecord = function () {
        window.location.href = "/Report/NewReport?ReportFor=Vehicle";
    }

    var FilterBillRecord = function () {
        window.location.href = "/Report/NewReport?ReportFor=Fuel&SelectAllIds=filtered";
    }
    var AllBillRecord = function () {
        window.location.href = "/Report/NewReport?ReportFor=Fuel";
    }
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
        $("#LoadProductTab").html(TabsLoaderText);
        $("#LoadProductTab").load("/Products/LoadProductPartial");

        $("#LoadProductTab").addClass("active");
        $(".LoadProductTab").click(function () {
            $("#LoadProductTab").html(TabsLoaderText);
            $("#LoadProductTab").load("/Products/LoadProductPartial");
            if ($("#LoadWarehouseTab").hasClass("active"))
            {
                $("#LoadWarehouseTab").removeClass("active");
            }
            if ($("#LoadProductWarehouseTab").hasClass("active")) {
                $("#LoadProductWarehouseTab").removeClass("active");
            }
            $("#LoadProductTab").addClass("active");
        });
        $(".LoadWarehouseTab").click(function () {
            $("#LoadWarehouseTab").html(TabsLoaderText);
            $("#LoadWarehouseTab").load("/Products/LoadWarehousePartial");
            if ($("#LoadProductTab").hasClass("active")) {
                $("#LoadProductTab").removeClass("active");
            }
            if ($("#LoadProductWarehouseTab").hasClass("active")) {
                $("#LoadProductWarehouseTab").removeClass("active");
            }
            $("#LoadWarehouseTab").addClass("active");
        });

        $(".LoadProductWarehouseTab").click(function () {
            $("#LoadProductWarehouseTab").html(TabsLoaderText);
            $("#LoadProductWarehouseTab").load("/Products/LoadPWMPartial");
            if ($("#LoadProductTab").hasClass("active")) {
                $("#LoadProductTab").removeClass("active");
            }
            if ($("#LoadWarehouseTab").hasClass("active")) {
                $("#LoadWarehouseTab").removeClass("active");
            }
            $("#LoadProductWarehouseTab").addClass("active");
        });
        $(".opportunity_filter_list").hide();
        $(".VehicleFilter").click(function () {
            OpenRightToLeftModal("/Report/VehicleFilter")
        })

        $(".FuelFilter").click(function () {
            OpenRightToLeftModal("/Report/FuelFilter")
        })

    });

</script>
