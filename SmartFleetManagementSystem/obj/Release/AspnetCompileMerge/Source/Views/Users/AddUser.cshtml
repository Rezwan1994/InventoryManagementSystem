@{
    Layout = null;
}
@model SFMS.Entity.Users



<link href="~/Content/Select2/select2.css" rel="stylesheet" />
<script src="~/Content/Select2/Select2.min.js"></script>
<link href="~/Content/Css/Car/AddCar.css" rel="stylesheet" />

<script src="~/Content/Js/Users/Users.js"></script>
<script src="~/Content/Js/Users/AddUser.js"></script>

<div class="add_opportunity_header">Add User</div>
<div class="container-fluid">
    <div class="form-group clearfix">
        <label>Name *</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", datarequired = "true", type = "text" })
        <label rel="Name" class="label hidden red position-absolute">*Name required</label>
    </div>
    <div class="form-group clearfix">
        <label>Designation *</label>
        @Html.TextBoxFor(x => x.Designation, new { @class = "form-control", type = "text" })
        <label rel="Designation" class="label hidden red position-absolute">* Please Enter Designation</label>
    </div>
    <div class="form-group clearfix">
        <label>Cell/Phone No *</label>
        @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control", type = "text" })
        <label rel="Mobile" class="label hidden red position-absolute">* Please Enter Phone Number</label>
    </div>

    <div class="form-group clearfix">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "text" })
        <label rel="Email" class="label hidden red position-absolute">* Please Enter Email</label>
    </div>

    <div class="form-group clearfix">
        <label>Address</label>
        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", type = "text" })
        <label rel="Address" class="label hidden red position-absolute">* Please Enter Address</label>
    </div>

    <input type="hidden" id="IdVal" value="@Model.Id">
    <input type="hidden" id="UserIdVal" value="@Model.UserId">

</div>

<section class="footer-section">
    <footer class="footer">
        <div class="save-package-div">
            <button class="btn-save-package-device" id="saveUsers">@(Model.Id > 0 ? "Update" : "Save")</button>
        </div>
    </footer>
</section>


